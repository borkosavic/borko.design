---
import Navbar from '../components/navigation/Navbar.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "UX Portfolio showcasing my work and projects" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preload" href="/fonts/Satoshi-Variable.ttf" as="font" type="font/ttf" crossorigin>
  </head>
  <body class="bg-white font-sans antialiased min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-1">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'Satoshi';
    src: url('/fonts/Satoshi-Variable.ttf') format('truetype');
    font-weight: 300 900;
    font-display: swap;
  }
  html {
    font-family: 'Satoshi', 'Inter', 'Segoe UI', Arial, sans-serif;
    font-size: 16px;
    scroll-padding-top: 4rem;
    background: #fff;
    color: #141414;
  }
  body {
    background: #fff;
    color: #141414;
    min-height: 100vh;
    font-family: inherit;
  }
  main {
    width: 100%;
    max-width: 100vw;
    margin: 0 auto;
    padding-bottom: 2rem;
  }
  /* Minimal, modern typography */
  h1, .text-5xl {
    font-size: 2.5rem;
    font-weight: 900;
    font-variation-settings: 'wght' 900;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
    color: #111;
  }
  h2, .text-2xl {
    font-size: 1.4rem;
    font-weight: 900;
    font-variation-settings: 'wght' 900;
    letter-spacing: -0.01em;
    margin-bottom: 1.2rem;
    color: #181818;
  }
  h3, .text-lg {
    font-size: 1.1rem;
    font-weight: 900;
    font-variation-settings: 'wght' 900;
    color: #232323;
    margin-bottom: 0.7rem;
  }
  p, li, span, a {
    font-size: 1rem;
    font-weight: 400;
    font-variation-settings: 'wght' 400;
    color: #232323;
    line-height: 1.7;
  }
  a {
    color: #232323;
    text-decoration: none;
    border-bottom: 1px solid #e5e5e5;
    transition: border 0.2s, color 0.2s;
  }
  a:hover {
    color: #111;
    border-bottom: 1px solid #111;
  }
  /* Remove gradients, use grayscale only */
  .bg-gradient-to-br, .bg-blue-50, .bg-white, .bg-white\/80 {
    background: #fff !important;
  }
  .shadow, .shadow-lg, .shadow-sm {
    box-shadow: none !important;
  }
  .card-hover, .section-fade {
    background: #fff;
    border: 1px solid #e5e5e5;
    box-shadow: none;
    border-radius: 1rem;
  }
  .badge {
    background: #f5f5f5;
    color: #232323;
    font-weight: 500;
    font-size: 0.95em;
    border-radius: 9999px;
    padding: 0.25rem 0.75rem;
    margin-right: 0.5rem;
    margin-bottom: 0.5rem;
    border: 1px solid #e5e5e5;
  }
  /* Accent colors only for project cards */
  /* Responsive helpers remain as before */
  @media (max-width: 640px) {
    html { font-size: 15px; scroll-padding-top: 3.5rem; }
    .avatar { width: 5.5rem; height: 5.5rem; }
  }
  @media (max-width: 400px) {
    html { font-size: 14px; scroll-padding-top: 3rem; }
  }
</style>