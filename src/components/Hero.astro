---
import profile from '../assets/profile.jpg';
---

<section class="relative overflow-hidden bg-gray-50">
  <div class="mx-auto max-w-container px-4 py-24 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-2 lg:gap-8">
      <div class="flex flex-col justify-center">
        <h1 class="text-5xl font-bold tracking-tight sm:text-6xl">
          UX Designer & Developer
        </h1>
        <p class="mt-6 text-lg text-gray-600">
          Creating intuitive and beautiful digital experiences that solve real problems.
        </p>
        <div class="mt-8">
          <a
            href="#projects"
            class="inline-block rounded-lg bg-gray-900 px-8 py-4 text-base font-semibold text-white transition-standard hover:bg-gray-700"
          >
            View My Work
          </a>
        </div>
      </div>
      <div class="relative">
        {profile?.src ? (
          <img
            src={profile.src}
            width={profile.width}
            height={profile.height}
            alt="Profile"
            class="aspect-square rounded-full object-contain shadow-xl"
            loading="lazy"
          />
        ) : (
          <div class="w-[320px] h-[320px] bg-gray-200 rounded-full flex items-center justify-center text-gray-500">
            No Image
          </div>
        )}
      </div>
    </div>
  </div>
</section>