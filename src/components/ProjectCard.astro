---
interface Props {
  title: string;
  description: string;
  image: string;
  color: string;
  href: string;
}

const { title, description, image, color, href } = Astro.props;
---

<a href={href} class="group relative overflow-hidden rounded-lg transition-standard hover:-translate-y-1 hover:shadow-xl">
  <div class={`absolute inset-0 opacity-10 transition-standard group-hover:opacity-20 bg-${color}-base`}></div>
  <div class="relative aspect-video">
    <img 
      src={image} 
      alt={title}
      class="h-full w-full object-cover"
      loading="lazy"
    />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold">{title}</h3>
    <p class="mt-2 text-gray-600">{description}</p>
  </div>
</a>