---
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
const isHashLink = href.startsWith('#') && href !== '#';
---

<a
  href={href}
  class="text-gray-600 hover:text-gray-900 transition-standard"
  data-nav-link={isHashLink}
>
  {label}
</a>

<script>
  const smoothScroll = (e: Event, target: string) => {
    e.preventDefault();
    const element = document.querySelector(target);
    if (!element) return;

    window.scrollTo({
      top: element.getBoundingClientRect().top + window.scrollY - 64, // 64px for navbar height
      behavior: 'smooth'
    });
  };

  const links = document.querySelectorAll<HTMLAnchorElement>('[data-nav-link="true"]');
  links.forEach(link => {
    link.addEventListener('click', (e) => {
      const href = link.getAttribute('href');
      if (href) smoothScroll(e, href);
    });
  });
</script>