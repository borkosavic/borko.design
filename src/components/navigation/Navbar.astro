---
import NavLink from './NavLink.astro';
import { navItems } from './NavItems';
---
<nav class="fixed top-0 left-0 w-full z-50 bg-white/80 backdrop-blur shadow transition-all duration-200">
  <div class="max-w-container mx-auto flex items-center justify-between px-4 sm:px-6 lg:px-8 h-16">
    <a href="/" class="flex items-center justify-center h-full text-2xl font-black tracking-tight text-gray-900 logo-no-underline" style="font-family: 'Satoshi', sans-serif; letter-spacing: -0.03em; height: 64px;">
      borko.design
    </a>
    <div class="hidden md:flex gap-2">
      {navItems.map(item => (
        <NavLink href={item.href} label={item.label} />
      ))}
    </div>
    <button id="nav-menu-btn" class="md:hidden flex items-center justify-center w-10 h-10 rounded transition-standard focus:outline-none" aria-label="Open menu">
      <svg class="w-7 h-7 text-gray-900" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/></svg>
    </button>
  </div>
  <div id="mobile-nav" class="fixed top-0 right-0 w-4/5 max-w-xs h-full bg-white shadow-lg z-50 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col p-8 gap-4">
    <button id="nav-menu-close" class="absolute top-4 right-4 w-10 h-10 flex items-center justify-center rounded transition-standard focus:outline-none" aria-label="Close menu">
      <svg class="w-7 h-7 text-gray-900" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/></svg>
    </button>
    <div class="flex flex-col gap-4 mt-8">
      {navItems.map(item => (
        <NavLink href={item.href} label={item.label} />
      ))}
    </div>
  </div>
</nav>

<script>
const menuBtn = document.getElementById('nav-menu-btn');
const mobileNav = document.getElementById('mobile-nav');
const closeBtn = document.getElementById('nav-menu-close');

menuBtn?.addEventListener('click', () => {
  mobileNav?.classList.remove('translate-x-full');
});
closeBtn?.addEventListener('click', () => {
  mobileNav?.classList.add('translate-x-full');
});
window.addEventListener('resize', () => {
  if (window.innerWidth >= 768) {
    mobileNav?.classList.add('translate-x-full');
  }
});
</script>

<style>
nav {
  box-shadow: 0 2px 8px 0 rgba(30, 41, 59, 0.06);
}
#mobile-nav {
  top: 0;
  right: 0;
  height: 100vh;
  min-width: 220px;
  max-width: 320px;
}
.logo-no-underline {
  text-decoration: none !important;
  border-bottom: none !important;
  font-variation-settings: 'wght' 900;
  font-weight: 900 !important;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: center;
}
@media (max-width: 640px) {
  #mobile-nav {
    width: 95vw;
    padding: 2rem 1rem;
  }
}
</style>