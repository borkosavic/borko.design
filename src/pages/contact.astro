---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/contact/ContactForm.astro';
---

<Layout title="Contact | UX Portfolio">
  <main class="mx-auto max-w-container px-4 py-24 sm:px-6 lg:px-8">
    <div class="max-w-2xl">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">Get in Touch</h1>
      <p class="mt-6 text-xl text-gray-600">
        Have a project in mind? I'd love to hear about it. Send me a message and I'll get back to you as soon as possible.
      </p>

      <div class="mt-12">
        <ContactForm />
      </div>
    </div>
  </main>
</Layout>